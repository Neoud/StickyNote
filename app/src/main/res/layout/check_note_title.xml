<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/title_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/back"
            />

        <Button
            android:id="@+id/title_share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/share"
            />

        <View
            android:id="@+id/view1"
            android:layout_width="6dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/title_share"
            android:background="#00000000"/>

        <Button
            android:id="@+id/title_delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/view1"
            android:layout_marginRight="40dp"
            android:background="@drawable/delete"/>

        <View
            android:id="@+id/view2"
            android:layout_width="6dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/title_delete"
            android:background="#00000000"/>

        <Button
            android:id="@+id/title_photo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/view2"
            android:background="@drawable/photo"
            />

        <View
            android:id="@+id/view3"
            android:layout_width="6dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/title_photo"
            android:background="#00000000"/>

        <Button
            android:id="@+id/title_lock"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/view3"
            android:background="@drawable/lock"/>

        <View
            android:id="@+id/view4"
            android:layout_width="6dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/title_lock"
            android:background="#00000000"/>

        <Button
            android:id="@+id/title_save"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/view4"
            android:background="@drawable/save"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3"
        />
</LinearLayout>